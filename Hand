from dataclasses import dataclass

@dataclass
class Hand:

    high_card = 0
    hand_type = None
    card_values = []
    card_suits = []

    def hand_type(self, list_of_card_obj):
        hand_dic = {"one_pair":0,
                    "two_pair":1,
                    "three_of_a_kind":2,
                    "straight":3,
                    "flush":4,
                    "full_house":5,
                    "four_of_a_kind":6,
                    "straight_flush":7,
                    "royal_flush":8}

        for card_obj in list_of_card_obj:

            card_values.append(card_obj.get_card_value())

            if card_obj.get_suit() not in card_suites:
                card_suits.append(card_obj.get_suit())
                continue

        if max(card_values) - min(card_vaulues) == 4 and len(card_suits) == 1:

            if max(card_value) == 14:
                self.hand_type = hand_dic.get('royal_flush')
                self.high_card = 14

            if card_values.sort() == [2,3,4,5,14]:
                self.hand_type = hand_dic.get('staight_flush')
                self.high_card = 5


            self.hand_type = hand_dic.get('staight_flush')
            self.high_card = max(card_values)


        elif len(set(card_values)) == 2:
            for values in card_values:
                card_count = card_values.count(values)

                if card_count == 4:
                    self.hand_type = hand_dic.get('four_of_a_kind')
                    self.high_card = value

                elif card_count == 2 or card_count == 3:
                        self.hand_type = hand_dic.get('full_house')
                        self.high_card = max(values)

        elif len(card_suits) == 1:
            self.hand_type = hand_dic.get('flush')
            self.high_card = max(values)

        elif len(set(card_values)) == 3:
                for values in card_values:
                    card_count = card_values.count(values)
                    if card_count == 3:
                        self.hand_type = hand_dic.get('three_of_a_kind')
                        self.high_card = value

        elif len(set(card_values)) == 3:
            for values in card_values:
                card_count = card_values.count(values)
                if card_count == 1:
                    card_values.pop(values)
            self.hand_type = hand_dic.get('two_pair')
            self.high_card = max(card_values)

        elif len(set(card_values)) == 4:
            for values in card_values:
                card_count = card_values.count(values)
                if card_count == 2:
                    self.hand_type = hand_dic.get('one_pair')
                    self.high_card = values

        elif len(set(card_values)) == 5:
            self.high_card = max_card_values
            
        def get_hand_type(self):
            return self.hand_type
        
        def get_high_card(self):
            return self.high_card
